<?xml version="1.0" encoding="utf-8"?>
<com.screen.recorder.widget.bubble.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/img_app"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/btn_flt_app" />

    <TextView
        android:id="@+id/lbl_time"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_floating"
        android:gravity="center"
        android:text="@string/_00_00"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone" />
</com.screen.recorder.widget.bubble.BubbleLayout>